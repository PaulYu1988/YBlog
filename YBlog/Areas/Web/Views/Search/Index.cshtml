@{
    var query = ViewBag.Query as ArticlePagedQuery;
    ViewData["Title"] = query?.Title;
    ViewData["MetaKeywords"] = query?.Title;
    ViewData["MetaDescription"] = query?.Title;
}
<div class="layui-row layui-col-space15">
    <div class="layui-col-xs12 layui-col-md9">
        <div class="layui-card">
            <div class="layui-card-header">
                <span class="layui-breadcrumb">
                    <a href="/">首页</a>
                    <a href="javascript:;">搜索</a>
                    <a href="javascript:;"><cite>@query?.Title</cite></a>
                </span>
            </div>
            <div class="layui-card-body">
                <partial name="_ArticleList" />
            </div>
        </div>
    </div>
    <div class="layui-col-xs12 layui-col-md3 sticky">
        <partial name="_Advertisement" model="EnumAdvertisementCodes.RightTop" />
        <partial name="_Search" />
        <partial name="_TopArticleList" />
        <partial name="_Advertisement" model="EnumAdvertisementCodes.RightBottom" />
    </div>
</div>
